<div class="container m-bottom">
<h1>Edit or delete the challenge</h1>

<div class="btn btn-danger">
  <%= link_to 'Delete challenge', @challenge, style: "color: black",method: :delete, data: { confirm: "Are you sure you want to delete this challenge?"} %>
</div>
<br>
<hr>

<%= simple_form_for @challenge do |f| %>
  <%= f.input :title %>
  <%= f.input :call_to_action %>
  <%= f.input :description %>
  <%= f.input :link %>
  <%= f.input :category %>
  <%= f.input :infobox_title %>
  <%= f.input :infobox_desc %>
  <%= f.input :infobox_link %>
  <%= f.input :impact_level %>
  <%= f.input :impact_co %>
  <%= f.input :impact_money %>
  <%= f.input :impact_desc %>
  <%= f.submit %>
<% end %>
</div>
