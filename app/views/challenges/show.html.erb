<div class="container m-bottom">
  <div class="d-flex box-challenge box justify-content-center align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path("banner-greenbird.jpg") %>);">
    <div>
      <h3><%= @challenge.call_to_action %></h3>
      <p><%= @challenge.description %></p>
     <!-- <p><%= @challenge.link %></p> --><br>
      <div btn-c-cta>
        <%= link_to 'Challenge done!', dashboard_path(current_user), class: "link-color btn-green-bird" %>
        <%= link_to 'More info', @challenge.link, target: "_blank", class: "link-color btn-green-bird-empty w" %>
      </div>
    </div>
  </div>

  <div class="row d-flex">
    <div class="col-6">
      <div class="small-box info-challenge box ">
        <div>
          <h3><%= @challenge.infobox_title %></h3>
          <p><%= @challenge.infobox_desc %></p><br>
        </div>
        <div class="button-read">
             <%= link_to 'Read more', @challenge.infobox_link, target: "_blank", class: "link-color btn-green-bird-empty" %>
        </div><br>
        <%= link_to 'Challenge done!', dashboard_path(current_user), class: "link-color btn-green-bird" %>
      </div>

    </div>

    <div class="col-6">
      <div class="small-box data-challenge box">
        <p><strong>If I do this action everyday, my impact per year is:</strong></p>
        <h3><strong><%= @challenge.impact_co %> kg of CO2</strong></h3>
        <p>Level: <%= @challenge.impact_level %></p>
        <p>Yearly savings: <%= @challenge.impact_money %> â‚¬</p>
        <p>Main impacts: <%= @challenge.impact_desc %></p>
      </div>

    </div>
  </div>


</div>
