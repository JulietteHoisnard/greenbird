<div class="container m-bottom">

  <div class="d-flex box-challenge box" style="background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.4)), url('<%= cl_image_path @challenge.photo.key, height: 450, width: 1200, crop: :fill %>');">

    <div class="container">

      <div class="justify-content-center">
        <h2><%= @challenge.call_to_action %></h2>
      </div>

      <div class=" description justify-content-center">
        <p><%= @challenge.description %></p>
        <br>
      </div>

      <div class="justify-content-center btn-c-cta d-flex">
        <%= link_to 'Discover more', @challenge.link, target: "_blank", class: "link-color btn-green-bird-empty w" %>
        <div class='margin-button'>
          <% if @instance.completed %>
            <%= button_to "Already completed!", @challenge, disabled: true, class: "link-color btn-green-bird-done btn-medium-size ml-md-3 ml-xl-3 mt-3 mt-md-0" %>
          <% else %>
            <%= button_to 'Challenge done!', challenge_challenge_user_path(@challenge, @instance.id), method: :patch, id: "sweet-alert-demo", class: "link-color btn-green-bird btn-medium-size" %>
          <% end %>
        </div>
      </div>

      <!-- the following div is for spacing. don't take it out!! -->
      <%# <div class="buttons-display row my-md-20 my-xl-4">
        <p></p>
      </div>

      <div class="row d-flex justify-content-around mt-5">

        <div class="col-4 d-flex justify-content-center">
          <div class="btn-green-bird-hover w infobox">
            <i class="fas fa-angle-down"></i> &nbspView bonus challenge &nbsp<i class="fas fa-angle-down"></i>
          </div>
        </div>

        <div class="col-4 d-flex justify-content-center">
          <div class="btn-green-bird-hover w databox">
            <i class="fas fa-angle-down"></i> &nbspView your impact &nbsp<i class="fas fa-angle-down"></i>
          </div>
        </div> %>

      <%# </div> %>

    </div>

    <div class="tag <%=@classtagcolor %>" >
      <%= @challenge.category %>
    </div>

  </div>


  <div class="row d-flex">
    <div class="col-xl-6 col-12">
      <div class="small-box info-challenge box">
        <div class="mb-2">
          <h3><%= @challenge.infobox_title %></h3>
          <p><%= @challenge.infobox_desc %></p><br>
        </div>
        <div class="button-read mb-4">
          <%= link_to 'Read more', @challenge.infobox_link, target: "_blank", class: "link-color btn-green-bird-empty btn-medium-size" %>
        </div>
        <div class='margin-button'>
          <% if @instance.opt_completed %>
            <%= button_to "Already completed!", @challenge, disabled: true, class: "link-color btn-green-bird-done btn-medium-size mt-3 mt-xl-0" %>
          <% else %>
            <%= button_to 'Bonus challenge done!', update_opt_challenge_challenge_user_path(@challenge, @instance.id), method: :patch, id: "sweet-alert-demo", class: "link-color btn-green-bird btn-medium-size" %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-xl-6 col-12">
      <div class="small-box data-challenge box">
        <p><strong>If I do this action every day for a year, I save:</strong></p>
        <br>
        <h3><strong><%= @challenge.impact_co %> kg of CO2</strong></h3>
        <br>
        <p><strong>Yearly savings:</strong> <%= @challenge.impact_money %> â‚¬</p>
        <p><strong>Main impacts:</strong> <%= @challenge.impact_desc %></p>
      </div>

    </div>
  </div>


</div>

