<div class="container m-bottom">
  <div class="d-flex box-challenge box justify-content-center align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1541625602330-2277a4c46182?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2850&q=80);">
    <div>
      <h3><%= @challenge.call_to_action %></h3>
      <p><%= @challenge.description %></p>
     <!-- <p><%= @challenge.link %></p> --><br>
      <div btn-c-cta>
        <%= link_to 'Challenge done!', challenge_challenge_user_path(@challenge, @instance.id), method: :put, class: "link-color btn-green-bird" %>
        <%= link_to 'More info', @challenge.link, target: "_blank", class: "link-color btn-green-bird-empty w" %>
      </div>
    </div>
  </div>

  <div class="row d-flex">
    <div class="col-6">
      <div class="small-box info-challenge box ">
        <div>
          <h3><%= @challenge.infobox_title %></h3>
          <p><%= @challenge.infobox_desc %></p><br>
        </div>
        <div class="button-read">
             <%= link_to 'Read more', @challenge.infobox_link, target: "_blank", class: "link-color btn-green-bird-empty btn-medium-size" %>
        </div><br>
        <% if @instance.opt_completed %>
          <%= link_to "You've already completed this optional challenge!", @challenge, class: "link-color btn-green-bird btn-medium-size" %>
        <% else %>
          <%= link_to 'Optional challenge done!', update_opt_challenge_challenge_user_path(@challenge, @instance.id), method: :patch, class: "link-color btn-green-bird btn-medium-size" %>
        <% end %>
      </div>

    </div>

    <div class="col-6">
      <div class="small-box data-challenge box">
        <p><strong>If I do this action everyday, my impact per year is:</strong></p>
        <h3><strong><%= @challenge.impact_co %> kg of CO2</strong></h3>
        <p>Level: <%= @challenge.impact_level %></p>
        <p>Yearly savings: <%= @challenge.impact_money %> â‚¬</p>
        <p>Main impacts: <%= @challenge.impact_desc %></p>
      </div>

    </div>
  </div>


</div>
