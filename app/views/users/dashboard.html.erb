<div class="container">
  <div class="top-banner">
    <%= cl_image_tag current_user.avatar_url, class: "avatar-large avatar-banner" %>
    <h1>Welcome <%= @user.username %></h1>
  </div>

  <div class="rankings-container">
    <div class="ranking-card margin-ranking-card ">
      <h2>My ranking</h2>
        <h3>in <%= @user.country %></h3>
        <h3>5</h3>
    </div>
    <div class="ranking-card margin-ranking-card">
      <h2>Days in a row</h2>
      <h3>5</h3>
    </div>
    <div class="ranking-card margin-ranking-card">
      <h2>Challenges done</h2>
      <h3><%= @challenges_done.count %></h3>
    </div>
    <div class="ranking-card">
      <h2>Optional challenges done</h2>
      <h3>3</h3>
    </div>
  </div>

  <div class="bottom-box">

    <div class="half-bottom margin-ranking-card half-bottom-left">
      <h1>Done challenges</h1>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
              <img src="https://lorempixel.com/200/100/nature/1" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://lorempixel.com/200/100/nature/2" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://lorempixel.com/200/100/nature/3" class="d-block w-100" alt="...">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <div div class="half-bottom half-bottom-right">
      <h1>Next challenge:</h1>
      <%= @challenge.challenge.title %>
    </div>
  </div>
</div>
