         <div class="card-badge">
          <img class="earth-logo" src="https://image.flaticon.com/icons/svg/814/814513.svg">
          <div class="card-body">
            <h4 class="card-title" style="text-align:center">Yay</h4>
          </div>
        </div>
      </div>

        <div class="p-2 bd-highlight">
          <div class="card-badge">
            <div class="card-body">
              <img class="earth-logo" src="https://image.flaticon.com/icons/svg/814/814513.svg">
              <h4 class="card-title">Yay</h4>
            </div>
          </div>
